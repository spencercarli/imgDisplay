<% if @submits.length <= 3%>
	<p>There don't seem to be enough images here! Care to add one or more for a better experience?</p>
	<%= link_to 'new', new_submit_path %>
	
<% else %>
<div class="row">

	<div class="display_image span6" >
		<h2 class="title"><%= @submitrand.title %></h2>
		<img src="<%= @submitrand.link %>" style="width:100%" />
		<br />
		<% if current_user %>
			<%= link_to 'Show', @submitrand %>
		<% end %>
	</div>

	<div class="display_image span6" style="float:right;">
		<h2 class="title"><%= @submitrand2.title %></h2>
		<img src="<%= @submitrand2.link %>" style="width:100%" />
		<br />
		<% if current_user %>
			<%= link_to 'Show', @submitrand2 %>
		<% end %>
	</div>
</div>
<br />
	
<div class="row">
	<div class="span12">
		<div style="margin-left:auto;margin-right:auto;width:80px">
			<%= button_to "Next", submits_path, :method => "get", :class => "btn btn-primary btn-large"  %>
		</div>
	</div>
</div>	
	

<% end %>