<% if @submits.length <= 3%>
	<p>There don't seem to be enough images here! Care to add one or more for a better experience?</p>
	<%= link_to 'new', new_submit_path %>
	
<% else %>

	<div class="display_image" style="float:left;">
		<h2 class="title"><%= @submitrand.title %></h2>
		<img src="<%= @submitrand.link %>" style="width:100%" />
		<br />
		<%= link_to 'Show', @submitrand %>
		<%= link_to 'Edit', edit_submit_path(@submitrand) %>
		<%= link_to 'Destroy', @submitrand, method: :delete, data: { confirm: 'Are you sure?' } %>
	</div>

	<div class="display_image" style="float:right;">
		<h2 class="title"><%= @submitrand2.title %></h2>
		<img src="<%= @submitrand2.link %>" style="width:100%" />
		<br />
		<%= link_to 'Show', @submitrand2 %>
		<%= link_to 'Edit', edit_submit_path(@submitrand2) %>
		<%= link_to 'Destroy', @submitrand2, method: :delete, data: { confirm: 'Are you sure?' } %>
	</div>

	<br />

<% end %>