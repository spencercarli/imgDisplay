<div class="span5">
<h1>Editing user</h1>

<%= render 'form' %>


<%= link_to 'Show', @user %> |
<%= link_to 'Back', users_path %>
</div>
<div class="span6">

	<% @images.each do |image| %>
		<div class="span3">
			<img src="<%= image.link %>" width="200"/><br /><br />
		</div>
		
		<div class="span2">
			<p class="lead"><%= image.title %></p>
			<div class="center-button">
				<%= button_to 'Edit', edit_submit_path(image.id), :method => "get", :class=>"btn btn-primary" %>
			</div>
			<div class="center-button">
				<%= button_to 'Destroy', image, method: :delete, data: {confirm: 'Are you sure?' }, :class=>"btn btn-danger" %>
			</div>
		</div>
	<% end %>

</div>